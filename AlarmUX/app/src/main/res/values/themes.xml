<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AlarmUX" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/verde</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="Theme.AlarmUX.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AlarmUX.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AlarmUX.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>